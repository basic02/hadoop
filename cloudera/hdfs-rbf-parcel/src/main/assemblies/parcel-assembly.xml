<assembly>
  <id>hdfs-rbf-parcel-assembly</id>

  <formats>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>${parcel.basename}</baseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib/hdfs_rbf/lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>true</useStrictFiltering>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <includes>
        <include>*</include>
      </includes>
      <excludes>
        <exclude>org.slf4j:slf4j-log4j12</exclude>
      </excludes>
      <fileMode>0644</fileMode>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
      <source>../../hadoop-dist/target/hadoop-${project.version}/LICENSE.txt</source>
      <outputDirectory>/lib/hdfs_rbf</outputDirectory>
      <fileMode>0644</fileMode>
    </file>

    <file>
      <source>../../hadoop-dist/target/hadoop-${project.version}/NOTICE.txt</source>
      <outputDirectory>/lib/hdfs_rbf</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
  </files>

  <fileSets>
    <!-- Copy executable script wrappers from src/main/bin -->
    <fileSet>
      <directory>${basedir}/src/main/bin</directory>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>

    <!-- Create an empty /etc/hadoop/conf.dist directory -->
    <fileSet>
      <directory>${basedir}/src/main/bin</directory>
      <outputDirectory>/etc/hadoop/conf.dist</outputDirectory>
      <fileMode>0755</fileMode>
      <excludes>
        <exclude>*</exclude>
      </excludes>
    </fileSet>

    <!-- Copy executable scripts to the bin directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/bin</directory>
      <outputDirectory>/lib/hdfs_rbf/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>hdfs</include>
      </includes>
    </fileSet>

    <!-- Copy c files to the include directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/include</directory>
      <outputDirectory>/lib/hdfs_rbf/include</outputDirectory>
      <includes>
        <include>hdfs.h</include>
      </includes>
    </fileSet>

    <!-- Copy jar libraries to the lib directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/share/hadoop/hdfs</directory>
      <outputDirectory>/lib/hdfs_rbf/lib</outputDirectory>
      <fileMode>0644</fileMode>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/share/hadoop/hdfs/lib</directory>
      <outputDirectory>/lib/hdfs_rbf/lib</outputDirectory>
      <fileMode>0644</fileMode>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>

    <!-- Copy native libraries to the lib/native directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/lib/native</directory>
      <outputDirectory>/lib/hdfs_rbf/lib/native</outputDirectory>
      <includes>
        <include>libhdfs*</include>
      </includes>
    </fileSet>

    <!-- Copy executable scripts to the libexec directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/libexec</directory>
      <outputDirectory>/lib/hdfs_rbf/libexec</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>hadoop-config.sh</include>
        <include>hadoop-functions.sh</include>
        <include>hdfs-config.sh</include>
      </includes>
    </fileSet>

    <!-- Copy executable scripts to the libexec/shellprofile.d directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/libexec/shellprofile.d</directory>
      <outputDirectory>/lib/hdfs_rbf/libexec/shellprofile.d</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>hadoop-hdfs.sh</include>
        <include>hadoop-httpfs.sh</include>
      </includes>
    </fileSet>

    <!-- Copy executable scripts to the sbin directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/sbin</directory>
      <outputDirectory>/lib/hdfs_rbf/sbin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>distribute-exclude.sh</include>
        <include>httpfs.sh</include>
        <include>refresh-namenodes.sh</include>
        <include>start-balancer.sh</include>
        <include>start-dfs.sh</include>
        <include>start-secure-dns.sh</include>
        <include>stop-balancer.sh</include>
        <include>stop-dfs.sh</include>
        <include>stop-secure-dns.sh</include>
      </includes>
    </fileSet>

    <!-- Copy web files to the webapps directory -->
    <fileSet>
      <directory>../../hadoop-dist/target/hadoop-${project.version}/share/hadoop/hdfs/webapps</directory>
      <outputDirectory>/lib/hdfs_rbf/webapps</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Copy meta files -->
    <fileSet>
      <directory>${basedir}/src/main/meta</directory>
      <outputDirectory>/meta</outputDirectory>
      <filtered>true</filtered>
      <fileMode>0644</fileMode>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
