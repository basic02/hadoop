<assembly>
  <id>hdfs-rbf-parcel-assembly</id>

  <formats>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>${parcel.basename}</baseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib/hdfs_rbf/lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>true</useStrictFiltering>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <includes>
        <include>*</include>
      </includes>
      <excludes>
        <!--<exclude>org.apache.hadoop:*</exclude>-->
        <exclude>org.slf4j:slf4j-api</exclude>
        <exclude>org.slf4j:slf4j-reload4j</exclude>
        <exclude>junit:junit</exclude>
      </excludes>
    </dependencySet>

    <!--<dependencySet>
      <outputDirectory>/lib/hdfs_rbf</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <includes>
        <include>org.apache.hadoop:*</include>
      </includes>
    </dependencySet>-->
  </dependencySets>

  <files>
    <file>
      <source>../../LICENSE.txt</source>
      <outputDirectory>/lib/hdfs_rbf</outputDirectory>
      <fileMode>0644</fileMode>
    </file>

    <file>
      <source>../../NOTICE.txt</source>
      <outputDirectory>/lib/hdfs_rbf</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
  </files>

  <fileSets>
    <!-- Copy executable binary wrappers from src/main/bin -->
    <!--<fileSet>
      <directory>${basedir}/src/main/bin</directory>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>-->

    <!-- Copy executable binaries from bin directory of hadoop-hdfs module -->
    <fileSet>
      <directory>../../hadoop-hdfs-project/hadoop-hdfs/src/main/bin</directory>
      <outputDirectory>/lib/hdfs_rbf/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>hdfs</include>
      </includes>
    </fileSet>

    <!-- Copy executable binaries from bin directory of hadoop-hdfs module -->
    <fileSet>
      <directory>../../hadoop-hdfs-project/hadoop-hdfs/src/main/bin</directory>
      <outputDirectory>/lib/hdfs_rbf/sbin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>distribute-exclude.sh</include>
        <include>refresh-namenodes.sh</include>
      </includes>
    </fileSet>

    <!-- Create an empty /etc/hadoop/conf.dist directory -->
    <fileSet>
      <directory>${basedir}/src/main/bin</directory>
      <outputDirectory>/etc/hadoop/conf.dist</outputDirectory>
      <fileMode>0644</fileMode>
      <excludes>
        <exclude>*</exclude>
      </excludes>
    </fileSet>

    <!-- Copy webapps from target directory of hadoop-hdfs module -->
    <fileSet>
      <directory>../../hadoop-hdfs-project/hadoop-hdfs/dev-support/jdiff</directory>
      <outputDirectory>/lib/hdfs_rbf/jdiff</outputDirectory>
      <fileMode>0644</fileMode>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>

    <!-- Copy webapps from target directory of hadoop-hdfs module -->
    <fileSet>
      <directory>../../hadoop-hdfs-project/hadoop-hdfs/target/webapps</directory>
      <outputDirectory>/lib/hdfs_rbf/webapps</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Copy webapps from target directory of hadoop-hdfs-rbf module -->
    <fileSet>
      <directory>../../hadoop-hdfs-project/hadoop-hdfs-rbf/target/webapps</directory>
      <outputDirectory>/lib/hdfs_rbf/webapps</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Copy meta files -->
    <fileSet>
      <directory>${basedir}/src/main/meta</directory>
      <outputDirectory>/meta</outputDirectory>
      <filtered>true</filtered>
      <fileMode>0644</fileMode>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
